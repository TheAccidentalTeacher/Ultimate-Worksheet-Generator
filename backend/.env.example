# Backend Configuration
NODE_ENV=production
PORT=3000

# OpenAI Configuration - Use your Railway variable names
OPENAI_API_KEY=your_openai_api_key_here
AZURE_AI_FOUNDRY_KEY=your_azure_key_here
REPLICATE_API_TOKEN=your_replicate_token_here
STABILITY_AI_API_KEY=your_stability_key_here
JWT_SECRET=your_jwt_secret_here

# Frontend URL for CORS
FRONTEND_URL=https://new-novel-generator.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Railway Deployment
RAILWAY_STATIC_URL=
RAILWAY_PRIVATE_DOMAIN=

# Application Settings
APP_NAME=Somers Novel Generator
APP_VERSION=1.0.0

# Security
HELMET_CSP_ENABLED=true

# AI Model Configuration
OPENAI_MODEL_ANALYSIS=gpt-4o
OPENAI_MODEL_GENERATION=gpt-4o-mini
OPENAI_MAX_TOKENS_ANALYSIS=4096
OPENAI_MAX_TOKENS_GENERATION=8192
OPENAI_TEMPERATURE=0.7

# Job Management
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MS=1800000
CLEANUP_INTERVAL_MS=3600000
